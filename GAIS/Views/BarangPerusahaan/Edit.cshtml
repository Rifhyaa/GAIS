@model GAIS.Models.BarangPerusahaan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <ol class="breadcrumb gais-breadcrumb" style="background-color: #fff">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item">Barang Perusahaan</li>
                        <li class="breadcrumb-item text-blue">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-header" style="font-size: 1.1rem;">
                Form Barang Perusahaan
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.NamaBarang)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.NamaBarang, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Nama Barang" } })
                    @Html.ValidationMessageFor(model => model.NamaBarang, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Keterangan)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Keterangan, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Deskripsi" } })
                    @Html.ValidationMessageFor(model => model.Keterangan, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ID_JenisBarang)<span style="color: red">*</span></label>
                    @Html.DropDownList("ID_JenisBarang", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_JenisBarang, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ID_Seksi)<span style="color: red">*</span></label>
                    @Html.DropDownList("ID_Seksi", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Seksi, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ID_Vendor)<span style="color: red">*</span></label>
                    @Html.DropDownList("ID_Vendor", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Vendor, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Stok)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Stok" } })
                    @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Harga)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Harga, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Harga" } })
                    @Html.ValidationMessageFor(model => model.Harga, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Ubah" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "BarangPerusahaan")" class="btn btn-outline-primary">Kembali</a>
                </div>
            </div>
        </div>
    </div>
}