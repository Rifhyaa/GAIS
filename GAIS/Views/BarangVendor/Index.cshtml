@model IEnumerable<GAIS.Models.BarangVendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <ol class="breadcrumb gais-breadcrumb" style="background-color: #fff">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item">Barang Vendor</li>
                        <li class="breadcrumb-item text-blue">List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div class="card-header" style="font-size: 1.1rem; ">
            DataTable Barang Vendor
        </div>
        <div class="card-body">
            <div class="row form-group">
                <div class="col-sm-12 col-md-6">
                    <a href="~/BarangVendor/Create" class="btn btn-primary">Add New</a>
                </div>
            </div>
            <div class="datatable">
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">No</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.NamaBarang)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Keterangan)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.ID_JenisBarang)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.ID_Vendor)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.Harga)</th>
                            <th class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int numRow = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(numRow += 1)</td>
                                <td>@Html.DisplayFor(modelItem => item.NamaBarang)</td>
                                <td>@Html.DisplayFor(modelItem => item.Keterangan)</td>
                                <td>@Html.DisplayFor(modelItem => item.JenisBarang.Nama)</td>
                                <td>@Html.DisplayFor(modelItem => item.Vendor.NamaVendor)</td>
                                <td class="text-right">@Html.DisplayFor(modelItem => item.Harga)</td>
                                <td class="text-center">
                                    <a href="~/BarangVendor/Details/@Html.DisplayFor(modelItem => item.ID)" data-toggle="tooltip" title="Details" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="list"></i></a>
                                    <a href="~/BarangVendor/Edit/@Html.DisplayFor(modelItem => item.ID)" data-toggle="tooltip" title="Edit" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="edit"></i></a>
                                    <a onClick="return confirm('Are you sure you want to delete this record?');" href="~/BarangVendor/Delete/@Html.DisplayFor(modelItem => item.ID)" data-toggle="tooltip" title="Delete" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="trash-2"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>