@model IEnumerable<GAIS.Models.Karyawan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <ol class="breadcrumb gais-breadcrumb" style="background-color: #fff">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item">Karyawan</li>
                        <li class="breadcrumb-item text-blue">List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div class="card-header" style="font-size: 1.1rem; ">
            Tabel Karyawan
        </div>
        <div class="card-body">
            <div class="row form-group">
                <div class="col-sm-12 col-md-6">
                    <a href="@Url.Action("Create", "Karyawan")" class="btn btn-primary">Tambah Data</a>
                </div>
            </div>
            <div class="table-responsive pt-2 pl-2">
                <div class="datatable">
                    <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-center min-wd-25">No</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.NPK)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.NamaKaryawan)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.JenisKelamin)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.NoTelp)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.ID_Role)</th>
                                <th class="text-center min-wd-75">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ // Deklarasi Variabel
                                int numRow = 0;
                                string laki = "Laki-Laki";
                                string perempuan = "Perempuan";
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(numRow += 1)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NPK)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NamaKaryawan)</td>
                                    <td>
                                        @if (item.JenisKelamin == "L")
                                        {
                                            @laki
                                        }
                                        else
                                        {
                                            @perempuan
                                        }
                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NoTelp)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Role.NamaRole)</td>
                                    <td class="text-center min-wd-75">
                                        <a href="~/Karyawan/Details/@Html.DisplayFor(modelItem => item.NPK)" data-toggle="tooltip" title="Lihat Detail Data" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="list"></i></a>
                                        <a href="~/Karyawan/Edit/@Html.DisplayFor(modelItem => item.NPK)" data-toggle="tooltip" title="Ubah Data" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="edit"></i></a>
                                        <a onclick="deleteConfirm('Karyawan/Delete/@Html.DisplayFor(modelItem => item.NPK)')" data-toggle="tooltip" title="Hapus Data" class="btn btn-datatable btn-icon btn-transparent-dark mr-2" te><i data-feather="trash-2"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>