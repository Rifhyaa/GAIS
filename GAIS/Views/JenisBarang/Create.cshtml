@model GAIS.Models.JenisBarang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <ol class="breadcrumb gais-breadcrumb" style="background-color: #fff">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item">Jenis Barang</li>
                        <li class="breadcrumb-item text-blue">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-header" style="font-size: 1.1rem;">
                Form Jenis Barang
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Nama)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Jenis Barang", @onkeypress = "return isCharKey(event)" } })
                    @Html.ValidationMessageFor(model => model.Nama, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Keterangan)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Keterangan, new { htmlAttributes = new { @class = "form-control", placeholder = "Masukkan Deskripsi" } })
                    @Html.ValidationMessageFor(model => model.Keterangan, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Simpan" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "JenisBarang")" class="btn btn-outline-primary">Kembali</a>
                </div>
            </div>
        </div>
    </div>
}
