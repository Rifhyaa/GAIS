
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <!-- Custom page header alternative example-->
    <div class="d-flex justify-content-between align-items-sm-center flex-column flex-sm-row mb-4">
        <div class="mr-4 mb-3 mb-sm-0">
            <h1 class="mb-0">Dashboard</h1>
            <div class="small">
                <span class="font-weight-500 text-primary">@DateTime.Now.ToString("dddd")</span>
                &#xB7; @DateTime.Now.ToString("MMMM dd, yyyy") &#xB7; @DateTime.Now.ToString("HH:mm tt")
            </div>
        </div>
    </div>
    <!-- Illustration dashboard card example-->
    <div class="card card-waves mb-4 mt-5">
        <div class="card-body p-5">
            <div class="row align-items-center justify-content-between">
                <div class="col">
                    <h1 class="text-primary">Selamat Datang, @ViewBag.NamaUser</h1>
                    <p class="text-gray-700">Jangan lupa menjaga jarak, memakai masker, dan patuhi protokol kesehatan untuk menghadapi pandemi ini.</p>
                </div>
                <div class="col d-none d-lg-block mt-xxl-n4"><img class="img-fluid px-xl-4 mt-xxl-n5" src="/assets/img/illustrations/statistics.svg" /></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <!-- Dashboard info widget 1-->
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <!-- Dashboard info widget 2-->
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <!-- Dashboard info widget 3-->
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <!-- Dashboard info widget 4-->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 mb-4">
            <!-- Illustration card example-->
            <!-- Report summary card example-->
            <!-- Progress card example-->
        </div>
        <div class="col-lg-8 mb-4">
            <!-- Area chart example-->
            <div class="row">
           
      
                    <!-- Pie chart example-->
                    <div class="card h-100">
                        <div class="card-header">Traffic Sources</div>
                        <div class="card-body">
                            <div class="chart-pie mb-4"><canvas id="chartStatusPengajuan" width="100%" height="500"></canvas></div>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex align-items-center justify-content-between small px-0 py-2">
                                    <div class="mr-3">
                                        <i class="fas fa-circle fa-sm mr-1 text-blue"></i>
                                        Direct
                                    </div>
                                    <div class="font-weight-500 text-dark">55%</div>
                                </div>
                                <div class="list-group-item d-flex align-items-center justify-content-between small px-0 py-2">
                                    <div class="mr-3">
                                        <i class="fas fa-circle fa-sm mr-1 text-purple"></i>
                                        Social
                                    </div>
                                    <div class="font-weight-500 text-dark">15%</div>
                                </div>
                                <div class="list-group-item d-flex align-items-center justify-content-between small px-0 py-2">
                                    <div class="mr-3">
                                        <i class="fas fa-circle fa-sm mr-1 text-green"></i>
                                        Referral
                                    </div>
                                    <div class="font-weight-500 text-dark">30%</div>
                                </div>
                            </div>
                        </div>
                    </div>
        
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        var jmlPesanan = document.getElementById('chartStatusPengajuan').getContext('2d');
        var dtStatus = [];
        var dtCount = [];

        var array = @Html.Raw(Json.Encode(@ViewBag.StatusPengajuan));

        for (var i = 0; i < array.length; i++) {
            //push ke array date dan count
            dtStatus.push(array[i].DeskripsiTrans);
            dtCount.push(array[i].jumlah);
        }


        var adminChart = new Chart(jmlPesanan, {
            type: 'doughnut',
            data: {
                labels: dtStatus,
                datasets: [{
                    label: dtStatus,
                    backgroundColor: [
                        '#ff6384', '#36a2eb', '#cc65fe', '#ffce56', '#99FF99', '#ffb84d', '#c68c53'
                    ],
                    borderColor: '#fff',
                    data: dtCount,
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    display: true,
                    position: 'bottom',
                    align: 'start',
                    labels: {
                        fontColor: 'rgba(213, 143, 56, 1)'
                    }
                },
            }
        });
        adminChart.canvas.style.width = '400px';
        adminChart.canvas.style.height = '400px';
    </script>
}