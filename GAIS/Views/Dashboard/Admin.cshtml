        </div>
        <div class="col-lg-8 mb-4">
            <!-- Area chart example-->

            <div class="row">
                <div class="col-lg-6">
                    <!-- Bar chart example-->

                </div>
                <div class="col-lg-6">
                    <!-- Pie chart example-->
 
                </div>
            </div>
        </div>
    </div>
</div>