@model GAIS.Models.Karyawan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <ol class="breadcrumb gais-breadcrumb" style="background-color: #fff">
                        <li class="breadcrumb-item">Home</li>
                        <li class="breadcrumb-item">Karyawan</li>
                        <li class="breadcrumb-item text-blue">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-4">
        <div class="card mb-4">
            <div class="card-header" style="font-size: 1.1rem;">
                Form Karyawan
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.NPK)

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.NamaKaryawan)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.NamaKaryawan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NamaKaryawan, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.JenisKelamin)<span style="color: red">*</span></label>
                    @Html.DropDownList("JenisKelamin", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.JenisKelamin, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.TanggalLahir)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.TanggalLahir, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TanggalLahir, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Alamat)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Alamat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Alamat, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Email)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.NoTelp)<span style="color: red">*</span></label>
                    @Html.EditorFor(model => model.NoTelp, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoTelp, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ID_Role)<span style="color: red">*</span></label>
                    @Html.DropDownList("ID_Role", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Role, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ID_Seksi)<span style="color: red">*</span></label>
                    @Html.DropDownList("ID_Seksi", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_Seksi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Ubah" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "Karyawan")" class="btn btn-outline-primary">Kembali</a>
                </div>
            </div>
        </div>
    </div>
}